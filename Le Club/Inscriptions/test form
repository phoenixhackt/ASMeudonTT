      <?php
  if(isset($_POST['submit'])) {
      $to = "maxencepru@gmail.com";
      $subject = "Nouvelle inscription";
      $message = "Nom: ".$_POST['nom']."\n";
      $message .= "Prénom: ".$_POST['prenom']."\n";
      $message .= "Sexe: ".$_POST['sexe']."\n";
      $message .= "Date de naissance: ".$_POST['date_naissance']."\n";
      $message .= "Nationalité: ".$_POST['nationalite']."\n";
      $message .= "Adresse: ".$_POST['adresse']."\n";
      $message .= "Code postal: ".$_POST['code_postal']."\n";
      $message .= "Ville: ".$_POST['ville']."\n";
      $message .= "Téléphone portable: ".$_POST['tel_port']."\n";
      $message .= "E-mail: ".$_POST['email']."\n";
    
      // Vérifier les champs obligatoires
    if($_POST['nom'] == "" || $_POST['prenom'] == "" || $_POST['sexe'] == "" || $_POST['date_naissance'] == "" || $_POST['nationalite'] == "" || $_POST['adresse'] == "" || $_POST['code_postal'] == "" || $_POST['ville'] == "" || $_POST['tel_port'] == "" || $_POST['email'] == "") {
        echo "Veuillez remplir tous les champs obligatoires.";
    } else {
        mail($to, $subject, $message);
        echo "Votre inscription a bien été enregistrée.";
    }
}
?>
<form method="post">
